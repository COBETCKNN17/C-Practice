<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Razor Fun!</title>
    </head>
    <body>
         <h2>Here are some delicious foods!</h2>
            @{
                var foodList = new List<string>{
                    "Turkish Delight",
                    "Pomegranate", 
                    "Roshen Dark Chocolate with Hazelnut",
                    "Five Guys Hamburger"
                };

                foreach(var food in foodList)
                {
                    if(food.Substring(0,1) == "R"){
                        <p style="color: red;">@food</p>
                    } else {
                        <p>@food</p>
                    }
                    
                }
            }
     </body>
</html> 