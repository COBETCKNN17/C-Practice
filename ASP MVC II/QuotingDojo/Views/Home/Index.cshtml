<html>
    <head>
        <meta charset='utf-8'/>
        <link rel='stylesheet' type='text/css' href='~/css/styles.css'>
       <title>User</title>
    </head>
    <body>
    <div id="wrapper">
    <h1>Quoting Dojo</h1>
    @if(ViewBag.Error != null){
    <b style="color:red;">@ViewBag.Error</b>
    }
    <form action="/quotes" method="POST">
        <p>Your name: <input type="text" name="name"></p>
        <p>Your quote: <textarea name="quote" cols="30" rows="10"></textarea></p>
    <input type="submit" value="Add my quote!">
    </form>
    <div class="buttons">
        <a href="/quotes"><button>Skip to quotes!</button></a>
    </div>
    </div>
    </body>
</html>